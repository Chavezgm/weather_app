<h1>Local Entities for <%= params[:state_code] %>:</h1>

<% if @local_entities.present? %>
  <ul>
    <% @local_entities.each do |entity| %>
    
      <li>
        <strong>Name:</strong> <%= entity[:name] %><br><br>
        <strong>State:</strong> <%= entity[:state] %><br><br>
        <strong>Forecast Office:</strong> <%= link_to entity[:forecast_office], entity[:forecast_office], target: '_blank' %><br><br>
        <strong>Time Zone:</strong> <%= entity[:time_zone].join(', ') %>
      </li>
      <br> 
    <% end %>
  </ul>
<% else %>
  <p>No local entities found for the selected state.</p>
<% end %>

<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary' %>
